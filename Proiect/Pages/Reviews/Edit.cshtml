@page
@model Proiect.Pages.Reviews.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Review</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Review.ReviewId" />
            <div class="form-group">
                <label asp-for="Review.Doctor" class="control-label"></label>
                <select asp-for="Review.DoctorID" class="form-control">
                    @foreach (var item in Model.Doctors)
                    {
                        @if (item.DoctorId == Model.Doctor.DoctorId)
                        {
                            <option value="@item.DoctorId" selected>@item.Name</option>
                        }else{
                            <option value="@item.DoctorId">@item.Name</option>
                        }
                    }
                </select>
                <span asp-validation-for="Review.DoctorID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Review.Patient" class="control-label"></label>
                <select asp-for="Review.PatientID" class="form-control">
                    <option value="@Model.Patient.PatientId">@Model.Patient.Name</option>
                    @foreach (var item in Model.Patients)
                    {
                        <option value="@item.PatientId">@item.Name</option>
                    }
                </select>
                <span asp-validation-for="Review.PatientID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Review.Appointment" class="control-label"></label>
                <select asp-for="Review.AppointmentID" class="form-control">
                    <option value="@Model.Appointment.ID">@Model.Appointment.DateTime</option>
                    @foreach (var item in Model.Appointments)
                    {
                            <option value="@item.ID">@item.DateTime</option>
                    }
                </select>
                <span asp-validation-for="Review.AppointmentID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Review.Description" class="control-label"></label>
                <input asp-for="Review.Description" class="form-control" />
                <span asp-validation-for="Review.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
